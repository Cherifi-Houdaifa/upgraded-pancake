{
    "include": ["./**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES2017",

        "module": "commonjs",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true
    }
}